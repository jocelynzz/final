    <div class="well">
		<div class="row">
			<div class="col-md-1"></div>
			<div class="col-md-7">
				<% if session["user_id"].present? %>
				<p>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					<span class="glyphicon-class"><%= link_to "Write Something New", new_post_url %></span>
				<p>
				<% else %>
				<p>
					<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
					<span class="glyphicon-class"><%= link_to "Sign Up", '/signup'%> or <%= link_to "Sign In", '/login'%> to Start Writing</span>
				<p>
				<% end %>
			</div>
			<div class="col-md-4"></div>
		</div>
  <% @posts.each do |post| %>
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-7">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">						
						<span class="glyphicons glyphicons-cat"></span>
						<%= link_to post.title, post_url(post.id),  :method => 'get' %>
						<h6><%= User.where(:id=>post.user_id).pluck("user_name")[0] %></h6>
						<h6><%= post.date %></h6></h3>
					<% if session["user_id"].to_i == post.user_id %>
						<h5><p><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>					
						<span class="glyphicon-class"><%= link_to "(delete)", post_url(post.id), :method => 'delete' %></span></p></h5>
					<% end %>
			</div>
				<!--<div class="panel-body"><%= post.body %></div>-->
			</div> 
		</div>
		<div class="col-md-4"></div>
	</div>
  <% end %>
  </div>

</ul>