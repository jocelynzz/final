<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class="well">
  <div class="row">
    <div class="col-xs-6 col-md-4"></div>
    <div class="col-xs-6 col-md-4">
      <h3>&nbsp;Sign Up</h3>
      <%= form_tag "/users" do %>
          <p style="margin-top:20px">
            <%= label_tag :* %>
            <%= text_field_tag :name, nil, :placeholder => 'User Name', :size => 25 %>
          </p>

          <p>
            <%= label_tag :* %>
            <%= text_field_tag :email, nil, :placeholder => 'Email Address', :size => 25 %>
          </p>

          <p>
            &nbsp;
            <%= text_field_tag :photo_url, nil, :placeholder => 'Photo URL', :size => 25 %>
          </p>

          <p>
            <%= label_tag :* %>
            <%= password_field_tag :password, nil, :placeholder => 'Password', :size => 25 %>
          </p>
           &nbsp;
          <%= submit_tag "Sign Me Up!", :class => "btn btn-large"%>
      <% end %>
    <div class="col-xs-6 col-md-4"></div>
  </div>
</div>
</div>