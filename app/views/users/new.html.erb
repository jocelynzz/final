<h3>Sign Up</h3>
<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/users", multipart: true do %>

 <p>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
 </p>
 
 <!--<p>
 	<%= file_field_tag :photo
 </p>-->
  
 <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
 </p>
  
 <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
 </p>
 

  <%= submit_tag "Sign Me Up!" %>
<% end %>