
<div class="well">
  <div class="row">
    <div class="col-xs-6 col-md-4"></div>
    <div class="col-xs-6 col-md-4">
      <h3>Please sign in</h3>

      <%= form_tag "/sessions" do %>
          <p style="margin-top:20px">
            <%= text_field_tag :email, nil, :placeholder => 'Email Address', :size => 25 %>
          </p>

          <p>
            <%= password_field_tag :password, nil, :placeholder => 'Password', :size => 25 %>
          </p>
          <p>
            <%= submit_tag "Login", :class => "btn btn-large"%>
          </p>

      <% end %>

      <div class="col-xs-6 col-md-4"></div>
    </div>
  </div>
</div>