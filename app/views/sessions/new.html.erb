
<div class="well">
  <div class="row">
    <div class="col-xs-6 col-md-4"></div>
    <div class="col-xs-6 col-md-4">
      <h3>Sign In</h3>

      <%= form_tag "/sessions" do %>
          <p>
            <%= label_tag :email %>
            <%= text_field_tag :email %>
          </p>

          <p>
            <%= label_tag :password %>
            <%= password_field_tag :password %>
          </p>
          <%= submit_tag "Let Me In!" %>

      <% end %>

      <div class="col-xs-6 col-md-4"></div>
    </div>
  </div>
</div>